<UserControl x:Class="FortnitePorting.Views.Controls.StyleSelectorItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
             xmlns:local="clr-namespace:FortnitePorting.Views.Controls">
    <StackPanel>
        <Button x:Name="Button" Background="Transparent" BorderBrush="Transparent"  Click="TestButton">
            <Image Source="{Binding IconSource, RelativeSource={RelativeSource AncestorType=local:StyleSelectorItem}}" Width="32" Height="32" RenderOptions.BitmapScalingMode="HighQuality"/>
        </Button>
    </StackPanel>
</UserControl>
